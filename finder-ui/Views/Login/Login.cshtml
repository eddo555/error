@model finder_ui.Models.LoginViewModel
<div class="container">
    <div class="row">
        <div class="col align-self-center">
            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                <div>
                    <h2>Logga in</h2>
                </div>
                <hr />
                <div class="form-group">
                    <label for="username">Användarnamn</label>
                    @Html.ValidationMessageFor(vm => vm.username)
                    @Html.TextBoxFor(vm => vm.username, new { @class = "form-control text-center", @placeholder = "Användarnamn / e-post" })
                </div>
                <div class="form-group">
                    <label for="userLastName">Lösenord</label>
                    @Html.PasswordFor(vm => vm.userPassword, new { @class = "form-control text-center", @placeholder = "Lösenord" })
                </div>
                @Html.HiddenFor(vm => vm.Action)
                @Html.HiddenFor(vm => vm.Controller)
                <button type="submit" class="button">Logga in</button>
            }
        </div>

    </div>
</div>

