@model List<finder_ui.ReviewServiceReference.ReviewData>
<link href="~/Content/Review.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
@{
    /**/

    ViewBag.Title = "Index";
}

<center><h2>Recensioner skrivna om personen: <strong>@ViewBag.aboutuser</strong> </h2></center>

@if (Model.Count == 0)
{
    <h1 style="text-align: center">Det finns inga recensioner skrivna om denna person</h1>

}
else
{
    <div class="reviews" style="text-align: center">

        @foreach (var item in Model)
        {
            <br />
            <div class="block">
                @for (var i = 0; i < item.Rating; i++)
                {
                    <span class="fa fa-star checked"></span>
                }

                <h2>@Html.DisplayFor(m => item.Title)</h2>
                <p>@Html.DisplayFor(m => item.Text)</p>

            </div>
            <br />
        }
    </div>

}





